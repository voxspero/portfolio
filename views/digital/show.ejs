<% include ../partials/header.ejs %>

<section class="content">

    <div class="d-flex justify-content-center align-items-center show-image-container">
        <% if(image.path.length < 2) { %>
            <a class="show-image-link" href="<%= image.path[0] %>" style="background-image: url('<%= image.path[0] %>');">
                <img class="show-image" src="<%= image.path[0] %>">
            </a>
        <% } else { %>
            <% image.path.forEach(function(path){ %>
                <div class="mySlides">
                    <a class="show-image-link" href="<%= path %>" style="background-image: url('<%= path %>');">
                        <div class="numbertext"><%= (image.path.indexOf(path) + 1) %> / <%= image.path.length %></div>
                        <img class="show-image" src="<%= path %>">
                    </a>
                </div>
            <% }); %>
            <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
            <a class="next" onclick="plusSlides(1)">&#10095;</a>
        <% } %>
    </div>

    <div class="row mx-0">

        <div class="col-lg col-md">
        </div>

        <div class="col-lg-10 col-md-10">
            <div class="d-flex flex-column align-items-center">
                <div class="card show-card my-5">
                    <h5 class="card-header d-flex align-items-center justify-content-between show-card-title"><%= image.title %><span class="card-text show-card-year"><%= image.year %></span></h5>
                    <div class="card-body">
                        <h4 class="card-title">Programs/Media Used:</h4>
                        <ul>    
                            <% image.media.forEach(function(media){ %>
                                <li><%= media %></li>
                            <% }); %>
                        </ul>
                        <hr class="mt-4 mb-3">
                        <p class="show-card-text preserve-space"><%= image.description %></p>
                        <div class="d-flex justify-content-around mb-2">
                            <a href="/digital" class="btn show-card-button">Back to Digital</a>
                            <a href="/" class="btn show-card-button">Back to Home</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg col-md">
        </div>

    </div>

</section>

<% include ../partials/footer.ejs %>